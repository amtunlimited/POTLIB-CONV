      COMMON /PT31CM/ R(3), ENERGY, DEDR(3)
      
      R(1)=0.9
      R(2)=1.9
      R(3)=1
      
      call prepot
      call pot
      
      WRITE (*,6) "ENERGY is ", ENERGY
      WRITE (*,6) "DEDR(1) is ", DEDR(1)
      WRITE (*,6) "DEDR(2) is ", DEDR(2)
      WRITE (*,6) "DEDR(3) is ", DEDR(3)
